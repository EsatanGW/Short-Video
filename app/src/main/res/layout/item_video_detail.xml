<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.esatan.shortvideo.view.custom.video.PlayerView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bar_height="@dimen/ui_interval_normal_half"
        app:controller_layout_id="@layout/view_custom_exo_player_controller"
        app:played_color="@color/colorVideoProgress"
        app:scrubber_dragged_size="@dimen/icon_size_small_double"
        app:scrubber_enabled_size="@dimen/icon_size_normal"
        app:show_back_button="true"
        app:show_information_bar="true"
        app:use_artwork="true" />

</FrameLayout>